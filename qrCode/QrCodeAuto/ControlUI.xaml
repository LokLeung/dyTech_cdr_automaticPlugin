<UserControl x:Class="QrCodeAuto.ControlUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QrCodeAuto"
             mc:Ignorable="d" 
             Height="26" Width="26">

    <Grid>
        <Button Content="QR" Name="btn_Command" Click="btn_Command_Click" >
            <Button.ToolTip>
                <ToolTip Background="White">
                    <StackPanel>
                        <Label Content="Qrcode" FontWeight="Bold" FontSize="12"/>
                        <Label Content="Click ME!" FontSize="11"/>
                    </StackPanel>
                </ToolTip>
            </Button.ToolTip>
        </Button>
    </Grid>

</UserControl>
